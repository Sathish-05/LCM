#include <stdio.h> Â  
int lcm(a,b);
int main()
{
 int num1,num2,LCM;
 printf("Enter the num1=");
 scanf("%d",&num1);
 printf("Enter the num2=");
 scanf("%d",&num2);
 
 if(num1>num2)
 {
  LCM=lcm(num2,num1);
 }
 else
 {
  LCM=lcm(num1,num2);
}
printf("LCM of %d and %d is %d",num1,num2,LCM);
 return 0;
}
int lcm(a,b)
{
 static int multiple=0;
 multiple+=b;
 if((multiple%a==0)&&(multiple%b==0))
  {
   return multiple;
  }
 else
 {
  return lcm(a,b);
 }  
}
